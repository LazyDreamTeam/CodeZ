{ "Afficher les erreurs PHP depuis le code" : "error_reporting(E_ALL);\r\nini_set('display_errors', 1); ", "Appeller une image en stream au lieu de l'adresse" : "// A few settings\n$image = 'cricci.jpg';\n\n// Read image path, convert to base64 encoding\n$imageData = base64_encode(file_get_contents($image));\n\n// Format the image SRC:  data:{mime};base64,{data};\n$src = 'data: '.mime_content_type($image).';base64,'.$imageData;\n\n// Echo out a sample image\necho '<img src=\"',$src,'\">';", "Champs de BDD dynamique" : "                    \tpublic function __call($method, $attributes){\r\n\t\t//Action sur appel d'une méthode inconnue\r\n\t\t$accessor = strtoupper(substr($method,0,12));\r\n\t\t$key = substr($method,12);\r\n\t\tswitch($accessor){\r\n\t\t\tcase 'GETPARAMETER':\r\n\t\t\t\t$params = $this->getParsedParameters();\r\n\t\t\t\treturn $params[$key];\r\n\t\t\tbreak;\r\n\t\t\tcase 'SETPARAMETER':\r\n\t\t\t\t$params = $this->getParsedParameters();\r\n\t\t\t\t$params[$key] = $attributes[0];\r\n\t\t\t\t$this->setParameters($params);\r\n\t\t\tbreak;\r\n\t\t\tdefault:\r\n\t\t\t\t$debug = debug_backtrace();\r\n\t\t\t\techo '<div style=\"background-color:#ffffff;font-family:Arial;padding:5px;margin:5px;border:1px solid #cecece;color:#OOOOOO;font-size:12px;\">Fonction '.$debug[0]['class'].'-><strong>'.$method.'('.implode(',',$attributes).')</strong> appelée dans <i>'.$debug[0]['file'].'</i> <strong>non définie.</strong></div>';\r\n\t\t\tbreak;\r\n\t\t}\r\n\t}\r\n\r\n\r\n\r\n\r\n //LORS DE L'insert en base :\r\n mysql_escape_string(json_encode($this->parameters))\r\n //Lors du select en base : \r\njson_decode($this->parameters,true)", "Find real IP address en PHP" : "function getRealIpAddr() {\n    if (!empty($_SERVER['HTTP_CLIENT_IP']))   //check ip from share internet\n    {\n      $ip=$_SERVER['HTTP_CLIENT_IP'];\n    }\n    elseif (!empty($_SERVER['HTTP_X_FORWARDED_FOR']))   //to check ip is pass from proxy\n    {\n      $ip=$_SERVER['HTTP_X_FORWARDED_FOR'];\n    }\n    else\n    \n      $ip=$_SERVER['REMOTE_ADDR'];\n    }\n//wilthi'ngs.zef$k\n    return $ip;\n}" }